extends components/layout.pug 
block content
  .row 
    .col-6
      include components/bigCard.pug
    .col-6
      h2 Bügün Neler Oldu?
      include components/card.pug
      include components/card.pug
      include components/card.pug
  .card-row
    .row 
      .col-3
        include components/spaceCard.pug
      .col-3
        include components/spaceCardEditor.pug
      .col-3
        include components/spaceCard.pug
      .col-3
        include components/spaceCard.pug
  .row 
    // Content
    .col-9
      h2 Haber Akışı
      include components/cardWide.pug
      include components/cardWide.pug
      include components/cardWideEditor.pug
      include components/cardWide.pug
      include components/cardWide.pug
      .row 
        .col-12 
          - var btnClass ="more"
          - var btnText = "Daha Fazla Göster"
          - var btnIcon = "icon-refresh"
          include components/button.pug
      // Koinbox TV
      .row 
        .col-12 
          include components/koinboxVideo.pug
      // Koinpedia
      .row
        .col-12
          .content-card 
            .content-card-header
              h2.title Koinpedia
            .content-card-body.flex-justify 
              +tagButton("Koin 101","briefcase","blue")
              +tagButton("Kripto Nasıl Alınır?","teacher","green")
              +tagButton("Kripto Nasıl Satılır?","book","yellow")
              +tagButton("Koin Borsaları","bitcoin","orange")
              +tagButton("NFT Borsaları","gallery","pink")
              +tagButton("NFT Nasıl Yapılır?","gallery-edit","purple")
              +tagButton("ColdWallet Nedir?","wallet","blue")
      // SpaceCardBigs
      .row
        .col-4
          include components/spaceCardBig.pug
        .col-4
          include components/spaceCardBig.pug
        .col-4
          include components/spaceCardBig.pug
        .col-4
          include components/spaceCardBig.pug
        .col-4
          include components/spaceCardBig.pug
        .col-4
          include components/spaceCardBig.pug
      .row
        .content-card 
            .content-card-header
              h2.title Etkinlinler
              .content-card-header-actions
                +button("Tüm Etkinlikler",null,"ghost")
            .content-card-body
              .row.search-area
                .col-2
                  +select("Kategori")
                .col-2
                  +select("Pozisyon")
                .col-4.content-center
                  input(type="text" placeholder="Ara")
                .col-2
                  +select("Sırala")
                .col-2.content-right
                  +button(null,'arrow-square-right','form')
                  +button(null,'arrow-square-left','form')
              .row
                .col-4 
                  include components/coinVote.pug
                .col-4 
                  include components/coinVote.pug
                .col-4 
                  include components/coinVote.pug
              .row
                .filter-area
                  .filter-area-filters
                      button(data-val="all").btn.borderred.primary.filter-btn.active Tümü
                      button(data-val="coin").btn.borderred.primary.filter-btn Coin
                      button(data-val="nft").btn.borderred.primary.filter-btn NFT
                      button(data-val="token").btn.borderred.primary.filter-btn Token
                      button(data-val="projects").btn.borderred.primary.filter-btn Projeler
                  .filter-area-body
                    .row
                      .col-4.filter-item.coin
                        +filterCard('coin')
                      .col-4.filter-item.nft
                        +filterCard('nft')
                      .col-4.filter-item.token
                        +filterCard('token')
                      .col-4.filter-item.coin
                        +filterCard('coin')
                      .col-4.filter-item.projects
                        +filterCard('projects')
                      .col-4.filter-item.token
                        +filterCard('token')
                      .col-4.filter-item.coin
                        +filterCard('coin')
                      .col-4.filter-item.coin
                        +filterCard('coin')
                      .col-4.filter-item.nft
                        +filterCard('nft')

    // Ads Side
    .col-3 
      img(src="/resources/images/adsBox.png" alt="")
      img(src="/resources/images/adsLong.png" alt="")
